{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "rootDir": "src",
    "lib": ["dom", "dom.iterable", "esnext"],
    "declaration": true,
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "jsx": "preserve",
    "outDir": "./built",
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "dist",  "src/**/*.cjs", "src/**/*.js", "src/**/*.jsx"]
}
